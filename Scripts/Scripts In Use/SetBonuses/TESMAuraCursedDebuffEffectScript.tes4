scn TESMAuraCursedDebuffEffectScript

short bBonusAdded
ref rSelf

begin ScriptEffectStart
	set bBonusAdded to 0
	set rSelf to GetSelf
	if bBonusAdded == 0
		rSelf.ModActorValue Speed -25
		rSelf.ModActorValue ResistNormalWeapons -35
		rSelf.ModActorValue ResistFire -25
		set bBonusAdded to 1
	endif
end

begin ScriptEffectFinish
	if bBonusAdded == 1
		rSelf.ModActorValue Speed 25
		rSelf.ModActorValue ResistNormalWeapons 35
		rSelf.ModActorValue ResistFire 25
		set bBonusadded to 0
	endif
end